<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls">

    <Style x:Key="SummaryStatText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="SummaryLabelText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Opacity" Value="0.9" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>

    <Style TargetType="{x:Type ctrl:SummaryStatDisplay}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:SummaryStatDisplay}">
                    <StackPanel>
                        <!-- THIS is the key: TemplateBinding keeps the caller binding incl. StringFormat -->
                        <TextBlock Style="{StaticResource SummaryStatText}"
                               Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}}" />
                               <!--Text="{TemplateBinding Value}" />-->

                        <TextBlock Style="{StaticResource SummaryLabelText}"
                               Text="{TemplateBinding Label}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>