<Window x:Class="StarResonanceDpsAnalysis.WPF.Views.PersonalDpsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
        xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        mc:Ignorable="d"
        Title="PersonalDpsView"
        Width="800" Height="110"
        lex:LocalizeDictionary.DesignCulture="en-US"
        Style="{StaticResource TransparentWindow}"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>

        <Style x:Key="CustomShadowWindowBorder" TargetType="Border" BasedOn="{StaticResource ShadowWindowBorder}">
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="BorderBrush" Value="#FFF" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="Padding" Value="25,0,25,0" />
        </Style>

        <Style x:Key="DragMoveBar" TargetType="Border">
            <Setter Property="Width" Value="55" />
            <Setter Property="Height" Value="4" />
            <Setter Property="Background" Value="#D6D7DB" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>

        <Style x:Key="RingProgressBar" TargetType="ctrl:RingProgressBar">
            <Setter Property="Margin" Value="0,5,0,5" />
            <Setter Property="RingThickness" Value="5" />
            <Setter Property="ProgressBrush" Value="#6BA5FC" />
            <Setter Property="TrackBrush" Value="#FFF" />
        </Style>

        <Style x:Key="RingProgressBarCircleBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E4F2FD" Offset="0" />
                        <GradientStop Color="#8CB1F5" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="999" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="DpsPersentText" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#SAO Welcome TT" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="DpsStackPanel" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="DpsTextBase" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="DpsText" TargetType="TextBlock" BasedOn="{StaticResource DpsTextBase}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#6BA5FC" />
        </Style>

    </Window.Resources>

    <Border Background="#ECEBE9" Style="{StaticResource CustomShadowWindowBorder}">
        <Grid>

            <Border Style="{StaticResource DragMoveBar}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <ctrl:RingProgressBar
                        Style="{StaticResource RingProgressBar}"
                        Maximum="100"
                        Value="75"
                        Grid.Column="0">
                        <ctrl:RingProgressBar.InnerContent>
                            <Border Style="{StaticResource RingProgressBarCircleBorder}">
                                <TextBlock
                                    Style="{StaticResource DpsPersentText}"
                                    Text="75%"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#6BA5FC"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center" />
                            </Border>
                        </ctrl:RingProgressBar.InnerContent>
                    </ctrl:RingProgressBar>

                    <StackPanel Style="{StaticResource DpsStackPanel}" Grid.Column="2">
                        <TextBlock Style="{StaticResource DpsTextBase}" Text="当前伤害"/>
                        <TextBlock Style="{StaticResource DpsText}" Text="22.4K (4603.4)"/>
                    </StackPanel>
                </Grid>

            </Grid>

        </Grid>
    </Border>

</Window>
