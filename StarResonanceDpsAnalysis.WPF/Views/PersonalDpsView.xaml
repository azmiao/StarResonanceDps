<Window x:Class="StarResonanceDpsAnalysis.WPF.Views.PersonalDpsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
        xmlns:vms="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
        xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:StarResonanceDpsAnalysis.WPF.Behaviors"
        mc:Ignorable="d"
        Title="PersonalDpsView"
        Width="700" Height="96"
        lex:LocalizeDictionary.DesignCulture="en-US"
        Style="{StaticResource TransparentWindow}"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance Type=vms:PersonalDpsViewModel}">

    <Window.Resources>

        <Style x:Key="CustomShadowWindowBorder" TargetType="Border" BasedOn="{StaticResource ShadowWindowBorder}">
            <Setter Property="CornerRadius" Value="17.5" />
            <Setter Property="BorderBrush" Value="#FFF" />
            <Setter Property="BorderThickness" Value="2.6" />
            <EventSetter Event="MouseDown" Handler="ViewBorder_MouseDown"/>
        </Style>

        <Style x:Key="DragMoveBar" TargetType="Border">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="3.5" />
            <Setter Property="Background" Value="#D6D7DB" />
            <Setter Property="CornerRadius" Value="1.75" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,7,0,0" />
        </Style>

        <Style x:Key="RingProgressBar" TargetType="ctrl:RingProgressBar">
            <Setter Property="Margin" Value="17.5,6.1,0,6.1" />
            <Setter Property="RingThickness" Value="3.5" />
            <!-- ⭐ 修改：使用主题颜色绑定 -->
            <Setter Property="ProgressBrush" Value="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}" />
            <Setter Property="TrackBrush" Value="#FFF" />
        </Style>

        <Style x:Key="RingProgressBarCircleBorder" TargetType="Border">
            <!-- ⭐ 修改：使用主题颜色渐变 -->
            <Setter Property="Background" Value="{Binding ThemeColor, Converter={StaticResource ThemeColorToGradientConverter}}" />
            <Setter Property="CornerRadius" Value="999" />
            <Setter Property="Margin" Value="6.1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>

        <Style x:Key="DpsPersentText" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#SAO Welcome TT" />
            <Setter Property="FontSize" Value="17.5" />
        </Style>

        <Style x:Key="DpsStackPanel" TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="DpsTextBase" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="13.75" />
            <Setter Property="Margin" Value="0,0,0,7" />
        </Style>

        <Style x:Key="DpsText" TargetType="TextBlock" BasedOn="{StaticResource DpsTextBase}">
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontWeight" Value="Bold" />
            <!-- ⭐ 修改：使用主题颜色 -->
            <Setter Property="Foreground" Value="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}" />
        </Style>

        <Style x:Key="SpliterBorder" TargetType="Border">
            <Setter Property="Height" Value="52.5" />
            <Setter Property="Background" Value="#D6D7DB" />
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#IconFont" />
            <Setter Property="FontSize" Value="36.75" />
            <Setter Property="Foreground" Value="#181919" />
            <Setter Property="Width" Value="39.4" />
            <Setter Property="Height" Value="39.4" />
            <Setter Property="Margin" Value="13.1,0,13.1,0" />
        </Style>

        <Style x:Key="FunctionSwitchButton" TargetType="ctrl:SwitchControl" BasedOn="{StaticResource {x:Type ctrl:SwitchControl}}">
            <Setter Property="Height" Value="52.5" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="Padding" Value="5.25" />
        </Style>

        <Style x:Key="SwitchSelectBorder" TargetType="Border">
            <Setter Property="Height" Value="52.5" />
            <Setter Property="Width" Value="175" />
            <Setter Property="Padding" Value="0,0,3.5,0" />
            <Setter Property="Margin" Value="8.75" />
            <Setter Property="Background" Value="#EEE" />
            <Setter Property="CornerRadius" Value="26.25" />
        </Style>

        <Style x:Key="SwitchSelectStackPanel" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style x:Key="SelectorToggleButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="75.25" />
            <Setter Property="Height" Value="40.25" />
            <Setter Property="Margin" Value="3.5,3.5,0,3.5" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#777" />
            <Setter Property="FontSize" Value="15.75" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0.875" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20.1">

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF" />
                                <!--<Setter TargetName="bd" Property="BorderBrush" Value="#FFF" />-->
                                <Setter Property="Foreground" Value="#000" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="8.75"
                                            Opacity="0.1"
                                            ShadowDepth="0"
                                            Color="#000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8F8F8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Unloaded">
            <b:InvokeCommandAction Command="{Binding UnLoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Border Background="#FBFBFB" Style="{StaticResource CustomShadowWindowBorder}">
        <Grid>

            <Border Style="{StaticResource DragMoveBar}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="78.75" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <ctrl:RingProgressBar
                            Style="{StaticResource RingProgressBar}"
                            Maximum="100"
                            Value="{Binding RemainingPercent}"
                            Visibility="{Binding EnableTrainingMode, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ctrl:RingProgressBar.InnerContent>
                                <Border Style="{StaticResource RingProgressBarCircleBorder}">
                                    <TextBlock
                                        Style="{StaticResource DpsPersentText}"
                                        Text="{Binding RemainingTimeDisplay}"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Foreground="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />
                                </Border>
                            </ctrl:RingProgressBar.InnerContent>
                        </ctrl:RingProgressBar>
                        <ctrl:RingProgressBar
                            Style="{StaticResource RingProgressBar}"
                            Maximum="100"
                            Value="{Binding TeamDamagePercent}"
                            Visibility="{Binding EnableTrainingMode, Converter={StaticResource BoolToInvertedVisibilityConverter}}">
                            <ctrl:RingProgressBar.InnerContent>
                                <Border Style="{StaticResource RingProgressBarCircleBorder}">
                                    <TextBlock
                                        Style="{StaticResource DpsPersentText}"
                                        Text="{Binding TeamPercentDisplay}"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Foreground="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />
                                </Border>
                            </ctrl:RingProgressBar.InnerContent>
                        </ctrl:RingProgressBar>
                    </Grid>

                    <StackPanel Style="{StaticResource DpsStackPanel}" Grid.Column="1">
                        <TextBlock Style="{StaticResource DpsTextBase}" Text="当前伤害"/>
                        <TextBlock Style="{StaticResource DpsText}" Text="{Binding CurrentDpsDisplay}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.75"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.75"/>
                    </Grid.ColumnDefinitions>

                    <Border 
                        Style="{StaticResource SpliterBorder}"
                        Grid.Column="0" />

                    <Grid Grid.Column="2">
                        <Button
                            Style="{StaticResource IconButton}"
                            Content="&#xec4c;"
                            Command="{Binding OpenDamageReferenceViewCommand}"
                            Visibility="{Binding EnableTrainingMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                            Style="{StaticResource IconButton}"
                            Content="&#xe612;"
                            Command="{Binding ShowStatisticsAndHidePersonalCommand}"
                            Visibility="{Binding EnableTrainingMode, Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
                    </Grid>

                    <Button
                        Style="{StaticResource IconButton}"
                        Content="&#xeb95;"
                        Command="{Binding OpenSkillBreakdownViewCommand}"
                        Grid.Column="3"/>

                    <Button
                        Style="{StaticResource IconButton}"
                        Content="&#xe6ad;"
                        Grid.Column="4">
                        <b:Interaction.Behaviors>
                            <behaviors:OpenContextMenuBehavior />
                        </b:Interaction.Behaviors>
                        <Button.ContextMenu>
                            <ContextMenu Style="{StaticResource ModernContextMenu}">
                                <ContextMenu.Resources>
                                    <Style BasedOn="{StaticResource ModernMenuItem}" TargetType="MenuItem" />
                                    <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" BasedOn="{StaticResource ModernMenuSeparator}" TargetType="Separator" />
                                </ContextMenu.Resources>
                                <MenuItem
                                    Header="打桩模式"
                                    IsCheckable="True"
                                    IsChecked="{Binding EnableTrainingMode}" />

                                <!-- 木桩选择菜单 -->
                                <MenuItem Header="木桩选择">
                                    <MenuItem
                                        Header="中间木桩"
                                        IsCheckable="True"
                                        IsChecked="{Binding SelectedDummyTarget, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Center}"
                                        StaysOpenOnClick="True" />
                                    <MenuItem
                                        Header="T木桩"
                                        IsCheckable="True"
                                        IsChecked="{Binding SelectedDummyTarget, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TDummy}"
                                        StaysOpenOnClick="True" />
                                </MenuItem>

                                <MenuItem
                                    Command="{Binding ClearCommand}"
                                    Header="清空" />
                                <Separator />
                                <MenuItem
                                    Command="{Binding CloseWindowCommand}"
                                    Header="关闭" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <Border 
                        Style="{StaticResource SpliterBorder}"
                        Grid.Column="6" />
                </Grid>

                <Border Grid.Column="2" Style="{StaticResource SwitchSelectBorder}">
                    <StackPanel x:Name="TabControlIndexChanger" Style="{StaticResource SwitchSelectStackPanel}">

                        <ToggleButton
                            Content="关闭"
                            Style="{StaticResource SelectorToggleButton}"
                            IsChecked="{Binding StartTraining, Mode=TwoWay, Converter={StaticResource BoolNegationConverter}}"/>
                        <ToggleButton
                            Content="开启"
                            Style="{StaticResource SelectorToggleButton}"
                            IsChecked="{Binding StartTraining, Mode=TwoWay}"/>

                    </StackPanel>
                </Border>

            </Grid>

        </Grid>
    </Border>

</Window>
