<Window
    x:Class="StarResonanceDpsAnalysis.WPF.Views.SkillBreakdownView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:loc="clr-namespace:StarResonanceDpsAnalysis.WPF.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    Title="{lex:Loc Key={x:Static loc:ResourcesKeys.Window_SkillBreakdown_Title}}"
    Width="1200"
    Height="800"
    MinWidth="800"
    MinHeight="450"
    d:DataContext="{d:DesignInstance viewModels:SkillBreakdownViewModel}"
    d:DesignHeight="1000"
    lex:ResxLocalizationProvider.DefaultAssembly="StarResonanceDpsAnalysis.WPF"
    lex:ResxLocalizationProvider.DefaultDictionary="Resources"
    PreviewKeyDown="Window_PreviewKeyDown"
    Style="{StaticResource TransparentWindow}"
    mc:Ignorable="d">

    <!--  WindowChrome: 开启可拉伸边界  -->
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="6"
            UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="InfoAndTypeGrid" TargetType="Grid">
            <Setter Property="Height" Value="60" />
            <Setter Property="Background" Value="#FFF" />
        </Style>
        <Style
            x:Key="InfoText"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>
        <Style
            x:Key="InfoNameText"
            BasedOn="{StaticResource InfoText}"
            TargetType="TextBlock">
            <Setter Property="Margin" Value="30,0,0,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="BlueCardBorder" TargetType="Border">
            <Setter Property="Background" Value="#2297F4" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="20,16" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.3"
                        ShadowDepth="4"
                        Color="#2297F4" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="CardTitle"
            BasedOn="{StaticResource NormalTextBlockBaseStyle}"
            TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>

        <!--  NEW: Elegant Skill Card Style  -->
        <Style x:Key="SkillCardBorder" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="Margin" Value="8,4" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.1"
                        ShadowDepth="2"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#2297F4" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="12"
                                Opacity="0.15"
                                ShadowDepth="3"
                                Color="#2297F4" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  NEW: Skill Name Style  -->
        <Style x:Key="SkillNameText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#212121" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!--  NEW: Stat Label Style  -->
        <Style x:Key="StatLabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#757575" />
            <Setter Property="Margin" Value="0,0,0,2" />
        </Style>

        <!--  NEW: Stat Value Style  -->
        <Style x:Key="StatValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2297F4" />
        </Style>

        <!--  NEW: Section Header Style  -->
        <Style x:Key="SectionHeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#212121" />
            <Setter Property="Margin" Value="16,12,16,8" />
        </Style>

        <!--  NEW: Summary Stats Card  -->
        <Style x:Key="SummaryCardBorder" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="#2297F4" />
                        <GradientStop Offset="1" Color="#1976D2" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="8" />
            <Setter Property="Padding" Value="20,16" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.3"
                        ShadowDepth="4"
                        Color="#2297F4" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  NEW: Summary Stat Style  -->
        <Style x:Key="SummaryStatText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="SummaryLabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Opacity" Value="0.9" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>

        <!--  Custom TabControl style: we remove built-in header area because we drive tabs from external selector  -->

        <!--  Chart Card Border Style  -->
        <Style
            x:Key="ChartCardBorder"
            BasedOn="{StaticResource BlueCardBorder}"
            TargetType="Border" />

        <!--  Skill List Item Template - reusable across all tabs  -->
        <DataTemplate x:Key="SkillListItemTemplate" DataType="{x:Type viewModels:SkillItemViewModel}">
            <Border Style="{StaticResource SkillCardBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" MinWidth="120" />
                        <ColumnDefinition Width="*" MinWidth="90" />
                        <ColumnDefinition Width="*" MinWidth="90" />
                        <ColumnDefinition Width="*" MinWidth="90" />
                        <ColumnDefinition Width="*" MinWidth="90" />
                    </Grid.ColumnDefinitions>

                    <!--  Skill Name with Icon  -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border
                            Width="36"
                            Height="36"
                            Margin="0,0,12,0"
                            Background="{Binding Tag, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CornerRadius="18">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding SkillName, Converter={StaticResource StringFirstCharConverter}}" />
                        </Border>
                        <TextBlock Style="{StaticResource SkillNameText}" Text="{Binding SkillName}" />
                    </StackPanel>

                    <!--  Total Value  -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Style="{StaticResource StatLabelText}" Text="Total" />
                        <TextBlock Style="{StaticResource StatValueText}" Text="{Binding TotalDamage, StringFormat={}{0:N0}}" />
                    </StackPanel>

                    <!--  Hit Count  -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Style="{StaticResource StatLabelText}" Text="Hits" />
                        <TextBlock Style="{StaticResource StatValueText}">
                            <Run Text="{Binding HitCount, Mode=OneWay}" />
                            <Run
                                FontSize="11"
                                FontWeight="Normal"
                                Foreground="#757575"
                                Text="hits" />
                        </TextBlock>
                    </StackPanel>

                    <!--  Crit Rate  -->
                    <StackPanel Grid.Column="3">
                        <TextBlock Style="{StaticResource StatLabelText}" Text="Crit Rate" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource StatValueText}" Text="{Binding CritRate, StringFormat={}{0:P1}}" />
                            <TextBlock
                                Margin="4,0,0,0"
                                VerticalAlignment="Bottom"
                                FontSize="11"
                                Foreground="#757575"
                                Text="{Binding CritCount, StringFormat={}({0})}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Average  -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Style="{StaticResource StatLabelText}" Text="Avg Hit" />
                        <TextBlock Style="{StaticResource StatValueText}" Text="{Binding AvgDamage, StringFormat={}{0:N0}}" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!--  Simple segmented ToggleButton style used for selector  -->
        <Style x:Key="TabSelectorToggleStyle" TargetType="ToggleButton">
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="4,4,0,4" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#777" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border
                            x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FFF" />
                                <Setter TargetName="bd" Property="BorderBrush" Value="#FFF" />
                                <Setter Property="Foreground" Value="#000" />
                                <Setter TargetName="bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Opacity="0.3"
                                            ShadowDepth="0"
                                            Color="#000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F8F8F8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FEFEFE" Style="{StaticResource ShadowWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:Header Title="{lex:Loc Key={x:Static loc:ResourcesKeys.SkillBreakdown_Header_Title}}" Grid.Row="0" />

            <!--  header info bound to VM (unchanged)  -->
            <Grid Grid.Row="1" Style="{StaticResource InfoAndTypeGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource InfoNameText}"
                    Text="{Binding PlayerName}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource InfoText}"
                    Text="{Binding Uid, StringFormat=UID: {0}}" />
                <TextBlock
                    Grid.Column="2"
                    Style="{StaticResource InfoText}"
                    Text="{Binding PowerLevel, StringFormat=Power: {0}}" />

                <Border
                    Grid.Column="4"
                    Margin="10"
                    Padding="0,0,4,0"
                    Background="#EEE"
                    CornerRadius="20">
                    <StackPanel
                        x:Name="TabControlIndexChanger"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <ToggleButton
                            Click="TabSelector_Click"
                            Content="{lex:Loc Key={x:Static loc:ResourcesKeys.SkillBreakdown_Tab_Output}}"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="0" />
                        <ToggleButton
                            Click="TabSelector_Click"
                            Content="{lex:Loc Key={x:Static loc:ResourcesKeys.SkillBreakdown_Tab_Healing}}"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="1" />
                        <ToggleButton
                            Click="TabSelector_Click"
                            Content="{lex:Loc Key={x:Static loc:ResourcesKeys.SkillBreakdown_Tab_Tanking}}"
                            Style="{StaticResource TabSelectorToggleStyle}"
                            Tag="2" />
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Content Grid with visibility-based tab switching (prevents chart disposal issues)  -->
            <TabControl
                x:Name="MainTabControl"
                Grid.Row="2"
                SelectedIndex="0"
                SelectionChanged="MainTabControl_SelectionChanged">
                <TabControl.Resources>
                    <!--  Hide default tab headers since we use custom selector  -->
                    <Style TargetType="TabControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabControl">
                                    <ContentPresenter ContentSource="SelectedContent" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!--  DPS Tab  -->
                <TabItem Header="DPS">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>

                            <GridSplitter Grid.Column="1" />

                            <!--  Right Panel: Stats and Skills  -->
                            <StackPanel Grid.Column="2" Margin="4,8,8,8">
                                <Border Style="{StaticResource SummaryCardBorder}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding DamageStats.Total, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Total Damage" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding DamageStats.Average, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Average DPS" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding DamageStats.Hits, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Total Hits" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding DamageStats.CritRate, StringFormat={}{0:P1}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Crit Rate" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <TextBlock Style="{StaticResource SectionHeaderText}" Text="Damage Skills Analysis" />

                                <ItemsControl
                                    Margin="0,0,0,16"
                                    ItemsSource="{Binding ObservedSlot.Damage.TotalSkillList}"
                                    Tag="#2297F4">
                                    <ItemsControl.ItemTemplate>
                                        <StaticResource ResourceKey="SkillListItemTemplate" />
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!--  Left Panel: Charts  -->
                            <StackPanel Grid.Column="0" Margin="8,8,4,8">
                                <!--  Time Series Chart  -->
                                <Border Style="{StaticResource ChartCardBorder}">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Style="{StaticResource CardTitle}"
                                            Text="Real-time DPS" />
                                        <oxy:PlotView Height="300" Model="{Binding DpsPlot.SeriesPlotModel}" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ResetZoomCommand}"
                                                    Content="↺"
                                                    Style="{StaticResource AntButtonStyle}"
                                                    ToolTip="Reset Zoom" />
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ZoomOutCommand}"
                                                    Content="-"
                                                    Style="{StaticResource AntButtonStyle}" />
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ZoomInCommand}"
                                                    Content="+"
                                                    Style="{StaticResource AntButtonStyle}" />
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!--  Pie Chart  -->
                                <Border Style="{StaticResource ChartCardBorder}">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Style="{StaticResource CardTitle}"
                                            Text="Skill Damage Distribution" />
                                        <oxy:PlotView Height="400" Model="{Binding DpsPlot.PiePlotModel}" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!--  Healing Tab  -->
                <TabItem Header="Healing">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>

                            <GridSplitter Grid.Column="1" />

                            <!--  Right Panel: Stats and Skills  -->
                            <StackPanel Grid.Column="2" Margin="4,8,8,8">
                                <Border Style="{StaticResource SummaryCardBorder}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding HealingStats.Total, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Total Healing" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding HealingStats.Average, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Average HPS" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding HealingStats.Hits, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Total Heals" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding HealingStats.CritRate, StringFormat={}{0:F1}%}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Crit Rate" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <TextBlock Style="{StaticResource SectionHeaderText}" Text="Healing Skills Analysis" />

                                <ItemsControl
                                    Margin="0,0,0,16"
                                    ItemsSource="{Binding ObservedSlot.Heal.TotalSkillList}"
                                    Tag="#3CB371">
                                    <ItemsControl.ItemTemplate>
                                        <StaticResource ResourceKey="SkillListItemTemplate" />
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!--  Left Panel: Charts  -->
                            <StackPanel Grid.Column="0" Margin="8,8,4,8">
                                <!--  Time Series Chart  -->
                                <Border Style="{StaticResource ChartCardBorder}">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Style="{StaticResource CardTitle}"
                                            Text="Real-time HPS" />
                                        <oxy:PlotView Height="300" Model="{Binding HpsPlot.LineSeriesData}" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ResetZoomCommand}"
                                                    Content="↺"
                                                    Style="{StaticResource AntButtonStyle}"
                                                    ToolTip="Reset Zoom" />
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ZoomOutCommand}"
                                                    Content="-"
                                                    Style="{StaticResource AntButtonStyle}" />
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ZoomInCommand}"
                                                    Content="+"
                                                    Style="{StaticResource AntButtonStyle}" />
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource ChartCardBorder}">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Style="{StaticResource CardTitle}"
                                            Text="Healing Distribution" />
                                        <oxy:PlotView Height="400" Model="{Binding HpsPlot.PiePlotModel}" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!--  Damage Taken Tab  -->
                <TabItem Header="Damage Taken">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>

                            <GridSplitter Grid.Column="1" />

                            <!--  Right Panel: Stats and Skills  -->
                            <StackPanel Grid.Column="2" Margin="4,8,8,8">
                                <Border Style="{StaticResource SummaryCardBorder}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding TakenDamageStats.Total, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Total Damage Taken" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding TakenDamageStats.Average, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Average DTPS" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding TakenDamageStats.Hits, StringFormat={}{0:N0}}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Total Hits Taken" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="3">
                                            <TextBlock Style="{StaticResource SummaryStatText}" Text="{Binding TakenDamageStats.CritRate, StringFormat={}{0:F1}%}" />
                                            <TextBlock Style="{StaticResource SummaryLabelText}" Text="Crit Rate" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <TextBlock Style="{StaticResource SectionHeaderText}" Text="Damage Taken Analysis" />

                                <ItemsControl
                                    Margin="0,0,0,16"
                                    ItemsSource="{Binding ObservedSlot.TakenDamage.TotalSkillList}"
                                    Tag="#E64A19">
                                    <ItemsControl.ItemTemplate>
                                        <StaticResource ResourceKey="SkillListItemTemplate" />
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!--  Left Panel: Charts  -->
                            <StackPanel Grid.Column="0" Margin="8,8,4,8">
                                <!--  Time Series Chart  -->
                                <Border Style="{StaticResource ChartCardBorder}">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Style="{StaticResource CardTitle}"
                                            Text="Real-time DTPS" />
                                        <oxy:PlotView Height="300" Model="{Binding DtpsPlot.SeriesPlotModel}" />
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ResetZoomCommand}"
                                                    Content="↺"
                                                    Style="{StaticResource AntButtonStyle}"
                                                    ToolTip="Reset Zoom" />
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ZoomOutCommand}"
                                                    Content="-"
                                                    Style="{StaticResource AntButtonStyle}" />
                                                <Button
                                                    Width="32"
                                                    Margin="4"
                                                    Command="{Binding ZoomInCommand}"
                                                    Content="+"
                                                    Style="{StaticResource AntButtonStyle}" />
                                            </StackPanel>
                                        </Grid>

                                    </StackPanel>
                                </Border>

                                <!--  Pie Chart  -->
                                <Border Style="{StaticResource ChartCardBorder}">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Style="{StaticResource CardTitle}"
                                            Text="Damage Sources Distribution" />
